<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech.gigabyte.mediplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddDrugDetails"
            android:label="ADD DRUG"/>

        <activity android:name=".DrugActivity"
            android:label="SAVED DRUG"/>

        <activity
            android:name=".AlarmActivity"
            android:label="ALARM" />

        <receiver android:name=".alarmreceiver.AlarmReceiver" />

        <activity
            android:name=".EditActivity"
            android:label="EDIT" />

        <activity
            android:name=".ShoppingActivity"
            android:label="WEBSITE" />

        <activity
            android:name=".Alarm_Information"
            android:label="ALARM" />

        <activity
            android:name=".PharmacyInfo"
            android:label="PHONEBOOK" />
        
        <activity android:name=".LoginActivity" />

    </application>

</manifest>